import numpy as np
import scipy.stats as sts
import matplotlib.pyplot as plt
import scipy as sp

mu = np.linspace(1.65, 1.8, num=50)
test = np.linspace(0, 2)  # Currently unused
uniform_dist = sts.uniform.pdf(mu) + 1

uniform_dist = uniform_dist/uniform_dist.sum()
beta_dist = sts.beta.pdf(mu, 2, 5, loc = 1.65, scale = 0.2)
beta_dist = beta_dist /beta_dist.sum()

# Plotting both distributions
plt.plot(mu, beta_dist, label='Beta Dist')
plt.plot(mu, uniform_dist, label='Uniform Dist')

plt.xlabel(r"Value of $\mu$ in meters")
plt.ylabel("Probability density")
plt.legend()

def likelihood_func (datum, mu):
    likelihood_out= sts.norm.pdf(datum, mu, scale = 0.1)
    return likelihood_out/likelihood_out.sum()#Note that mu here is an array of values, so the output is also an array!\


likelihood_out = likelihood_func(1.7, mu)

plt.plot(mu, likelihood_out)
plt. title("Likelihood of $|mus given observation 1.7m")
plt.ylabel ("Probability Density/Likelihood")
plt. xlabel("Value of $|mu$")
plt.show()

unnormalized_posterior = likelihood_out * uniform_dist
plt.plot(mu, unnormalized_posterior)
plt.xlabel(r"$\mu$ in meters")
plt.ylabel("Unnormalized Posterior")
plt.show()
